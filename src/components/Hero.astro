---
import { Image } from "astro:assets";
import heroImg from "../assets/hero-img.jpg";
---

<section
  class="hero grid relative w-full min-h-screen lg:min-h-[70vh] place-items-center lg:place-items-start mb-12"
  id="hero"
  data-gsap-hero
>
  <div
    class="content relative max-w-[65ch] p-4 lg:left-56 z-20"
    data-gsap-hero-content
  >
    <h1
      class="font-display text-monstera-600 dark:text-monstera-50 text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight my-8 text-balance"
      data-gsap-hero-title
    >
      Welcome to <span
        class="inline-block bg-text-gradient bg-clip-text text-transparent pr-2"
        >Moxie Beauty Studio</span
      >
    </h1>
    <p class="text-base text-balance mb-4" data-gsap-hero-text>
      Welcome to Moxie, where beauty meets expertise. Our studio specializes in
      stunning lashes and sculpted brows, offering personalized treatments that
      leave you confident and radiant. Discover the power of Moxie and unleash
      your inner glow today.
    </p>
    <ul
      class="my-6 lg:flex lg:flex-row"
      id="contact-hero"
      data-gsap-hero-contact
    >
      <li class="mb-4 lg:mb-0 lg:py-5 pe-6 text-base">
        <span class="font-display-bold mr-1 text-monstera dark:text-ivory-rose"
          >Phone</span
        >
        <a
          href="tel:2623326072"
          class="font-semibold no-underline lg:hover:underline underline-offset-2 decoration-2 decoration-monstera dark:decoration-ivory-rose transition-all"
          >(262) 332-6072</a
        >
      </li>
      <li class="mb-4 lg:mb-0 lg:py-5 pe-6 text-base">
        <span class="font-display-bold mr-1 text-monstera dark:text-ivory-rose"
          >Email</span
        >
        <a
          href="mailto:hello@moxiebeautystudiowi.com"
          class="font-semibold no-underline lg:hover:underline underline-offset-2 decoration-2 decoration-monstera dark:decoration-ivory-rose transition-all"
          >hello@moxiebeautystudiowi.com</a
        >
      </li>
    </ul>
  </div>
</section>
<Image
  src={heroImg}
  alt="Close up of a woman's face. She has amazing lashes."
  class="absolute top-0 right-0 w-60 md:w-1/3 2xl:w-[32vw] h-96 md:h-[48vh] lg:h-[64vh] xl:h-[80vh] 2xl:h-[88vh] rounded-bl-full rounded-tl-[15%] border-l-[1rem] border-rose-gold-500 dark:border-ivory-rose-500 object-cover z-0"
  loading="eager"
  data-gsap-hero-image
/>

<div
  class="w-full h-20 bg-gradient-to-b from-10% from-background sticky top-0 z-20 hidden lg:block"
>
</div>

<script>
  function initHeroAnimations() {
    if (!window.gsap) return;

    // Set initial states
    window.gsap.set(
      "[data-gsap-hero-title], [data-gsap-hero-text], [data-gsap-hero-contact]",
      {
        opacity: 0,
        y: 30,
      }
    );

    window.gsap.set("[data-gsap-hero-image]", {
      opacity: 0,
      x: 30,
    });

    // Create hero timeline that starts slightly after nav
    const heroTimeline = window.gsap.timeline({
      defaults: {
        ease: "power3.out",
        duration: 0.6,
      },
      delay: 0.2, // Slight delay after nav starts
    });

    // Coordinated animations
    heroTimeline
      .to(
        "[data-gsap-hero-title], [data-gsap-hero-text], [data-gsap-hero-contact]",
        {
          opacity: 1,
          y: 0,
        }
      )
      .to(
        "[data-gsap-hero-image]",
        {
          opacity: 1,
          x: 0,
        },
        "-=0.6"
      ); // Overlap with content animation
  }

  // Run animations when page loads
  if (
    document.readyState === "complete" ||
    document.readyState === "interactive"
  ) {
    initHeroAnimations();
  } else {
    document.addEventListener("DOMContentLoaded", initHeroAnimations);
  }

  // Run animations on view transitions
  document.addEventListener("astro:page-load", initHeroAnimations);
</script>
