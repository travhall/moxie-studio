---
import "../styles/globals.css";
import { SEO } from "astro-seo";
import SiteNav from "../components/SiteNav.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Modal from "../components/Modal.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO title={title} description="" />

    <!-- GSAP Core and Plugins -->
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"
    ></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"
    ></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollToPlugin.min.js"
    ></script>

    <!-- Register plugins -->
    <script is:inline>
      window.gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);
    </script>
  </head>
  <body class="relative bg-background text-foreground" id="top">
    <SiteNav />
    <slot />
    <SiteFooter />
    <Modal />
    <style is:global>
      @font-face {
        font-family: "Mulish";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/fonts/Mulish-VariableFont_wght.woff2) format("woff2");
      }
      @font-face {
        font-family: "Mulish Italic";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/fonts/Mulish-Italic-VariableFont_wght.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url(/fonts/NyghtSerif-Light.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif Italic";
        font-style: italic;
        font-weight: 400;
        font-display: swap;
        src: url(/fonts/NyghtSerif-LightItalic.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif Dark";
        font-style: normal;
        font-weight: 800;
        font-display: swap;
        src: url(/fonts/NyghtSerif-Dark.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif Dark Italic";
        font-style: italic;
        font-weight: 800;
        font-display: swap;
        src: url(/fonts/NyghtSerif-DarkItalic.woff2) format("woff2");
      }
    </style>

    <script>
      // Event listeners from your original layout
      document.addEventListener("astro-color-scheme-change", ((
        ev: CustomEvent<{ colorScheme: string }>
      ) => {
        document.documentElement.classList.toggle(
          "dark",
          ev.detail.colorScheme === "dark"
        );
      }) as EventListener);

      document
        .querySelector(".booking-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://squareup.com/appointments/book/anzl660330wful/LHZ09SDE51Z6W/start")
        );
      document
        .querySelector(".facebook-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://www.facebook.com/moxiebeautystudiowi")
        );
      document
        .querySelector(".instagram-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href = "https://www.instagram.com/moxiebeautywi")
        );
    </script>
  </body>
</html>
