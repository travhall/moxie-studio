---
import SiteNav from "../components/SiteNav.astro";
import SiteFooter from "../components/SiteFooter.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/moxie-studio/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="relative bg-ivory-rose-50 dark:bg-monstera-900 text-midnite-900 dark:text-white"
    id="top"
  >
    <SiteNav />
    <slot />
    <SiteFooter />

    <style is:global>
      @font-face {
        font-family: "Mulish";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/moxie-studio/fonts/Mulish-VariableFont_wght.woff2)
          format("woff2");
      }
      @font-face {
        font-family: "Mulish Italic";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/moxie-studio/fonts/Mulish-Italic-VariableFont_wght.woff2)
          format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url(/moxie-studio/fonts/NyghtSerif-Light.woff2) format("woff2");
      }

      @font-face {
        font-family: "Nyght Serif Italic";
        font-style: italic;
        font-weight: 400;
        font-display: swap;
        src: url(/moxie-studio/fonts/NyghtSerif-LightItalic.woff2)
          format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif Dark";
        font-style: normal;
        font-weight: 800;
        font-display: swap;
        src: url(/moxie-studio/fonts/NyghtSerif-Dark.woff2) format("woff2");
      }

      @font-face {
        font-family: "Nyght Serif Dark Italic";
        font-style: italic;
        font-weight: 800;
        font-display: swap;
        src: url(/moxie-studio/fonts/NyghtSerif-DarkItalic.woff2)
          format("woff2");
      }
      html {
        min-height: 100dvh;
        scroll-behavior: smooth;
        font-family: "Mulish", ui-sans-serif, system-ui, sans-serif,
          "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",
          "Noto Color Emoji";
      }
      button path {
        fill: #fff;
      }
      .logo-fill {
        fill: #1d3e22;
      }
      @media (prefers-color-scheme: dark) {
        button path {
          fill: #1d3e22;
        }
        .logo-fill {
          fill: #fff;
        }
      }
    </style>
    <script>
      document
        .querySelector(".booking-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://squareup.com/appointments/book/anzl660330wful/LHZ09SDE51Z6W/start")
        );
      document
        .querySelector(".facebook-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://www.facebook.com/moxiebeautystudiowi")
        );
    </script>
  </body>
</html>
