---
import { SEO } from "astro-seo";
import SiteNav from "../components/SiteNav.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Modal from "../components/Modal.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO title={title} description="" />
  </head>
  <body
    class="relative bg-ivory-rose-50 dark:bg-monstera-900 text-midnite-900 dark:text-white w-full overflow-x-hidden"
    id="top"
  >
    <SiteNav />
    <slot />
    <SiteFooter />
    <Modal />
    <style is:global>
      @font-face {
        font-family: "Mulish";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/fonts/Mulish-VariableFont_wght.woff2) format("woff2");
      }
      @font-face {
        font-family: "Mulish Italic";
        font-style: normal;
        font-weight: 200 1000;
        font-display: swap;
        src: url(/fonts/Mulish-Italic-VariableFont_wght.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url(/fonts/NyghtSerif-Light.woff2) format("woff2");
      }

      @font-face {
        font-family: "Nyght Serif Italic";
        font-style: italic;
        font-weight: 400;
        font-display: swap;
        src: url(/fonts/NyghtSerif-LightItalic.woff2) format("woff2");
      }
      @font-face {
        font-family: "Nyght Serif Dark";
        font-style: normal;
        font-weight: 800;
        font-display: swap;
        src: url(/fonts/NyghtSerif-Dark.woff2) format("woff2");
      }

      @font-face {
        font-family: "Nyght Serif Dark Italic";
        font-style: italic;
        font-weight: 800;
        font-display: swap;
        src: url(/fonts/NyghtSerif-DarkItalic.woff2) format("woff2");
      }
      html {
        min-height: 100dvh;
        max-width: 100vw;
        scroll-behavior: smooth;
      }
      button path {
        fill: #fff;
      }
      .logo-fill {
        fill: #0c1a0e;
      }
      .logo-hilite {
        fill: #d9b77b;
      }

      .modal-window {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.75);
        opacity: 0;
        visibility: hidden;
        transition:
          opacity 0.3s ease,
          visibility 0.3s ease;
        z-index: 1000;
      }

      .modal-window.open {
        opacity: 1;
        visibility: visible;
      }
      @media (prefers-color-scheme: dark) {
        button path {
          fill: #1d3e22;
        }
        .logo-fill {
          fill: #fff;
        }
        .logo-hilite {
          fill: #ddbfbf;
        }
        .light {
          button path {
            fill: #fff;
          }
          .logo-fill {
            fill: #0c1a0e;
          }
          .logo-hilite {
            fill: #d9b77b;
          }
        }
      }
      @media (prefers-color-scheme: light) {
        button path {
          fill: #fff;
        }
        .logo-fill {
          fill: #0c1a0e;
        }
        .logo-hilite {
          fill: #d9b77b;
        }
        .dark {
          button path {
            fill: #0c1a0e;
          }
          .logo-fill {
            fill: #fff;
          }
          .logo-hilite {
            fill: #ddbfbf;
          }
        }
      }
    </style>
    <script>
      document
        .querySelector(".booking-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://squareup.com/appointments/book/anzl660330wful/LHZ09SDE51Z6W/start")
        );
      document
        .querySelector(".facebook-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href =
              "https://www.facebook.com/moxiebeautystudiowi")
        );
      document
        .querySelector(".instagram-btn")
        ?.addEventListener(
          "click",
          () =>
            (window.location.href = "https://www.instagram.com/moxiebeautywi")
        );
    </script>
  </body>
</html>
